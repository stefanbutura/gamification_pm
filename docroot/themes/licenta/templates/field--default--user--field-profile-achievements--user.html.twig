{% if label_hidden %}
    {% if multiple %}
        {% if items %}
            <h2 class="panel-heading">{{ 'Achievements' | trans }}</h2>
        {% endif %}
        <div{{ attributes.addClass('panel-block') }}>
            <table class="table is-narrow">
            <tbody>
            {% for item in items %}
                <tr><td>
                <div{{ item.attributes }}>{{ item.content }}</div>
                    </td></tr>
            {% endfor %}
            </tbody>
            </table>
        </div>
    {% else %}
        {% for item in items %}
            <div{{ attributes }}>{{ item.content }}</div>
        {% endfor %}
    {% endif %}
{% else %}
    <div{{ attributes }}>
        <div{{ title_attributes }}>{{ label }}</div>
        {% if multiple %}
        <div>
            {% endif %}
            {% for item in items %}
                <div{{ item.attributes }}>{{ item.content }}</div>
            {% endfor %}
            {% if multiple %}
        </div>
        {% endif %}
    </div>
{% endif %}
